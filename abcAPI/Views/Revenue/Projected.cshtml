@{
    ViewData["Title"] = "Projected Revenue";
}

<main class="container mt-4">
    <h1>Calculate Projected Revenue</h1>
    <form asp-controller="Revenue" asp-action="CalculateProjectedRevenue" method="post">
        <div class="form-group">
            <label for="ProductName">Product Name</label>
            <input type="text" class="form-control" id="ProductName" name="ProductName" placeholder="Enter product name (optional)">
        </div>
        <div class="form-group">
            <label for="Currency">Currency</label>
            <input type="text" class="form-control" id="Currency" name="Currency" placeholder="Enter currency (optional)">
        </div>
        <button type="submit" class="btn btn-primary">Calculate</button>
    </form>
</main>