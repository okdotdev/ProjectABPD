@model abcAPI.Models.ViewModels.SoftwareViewModel
@using abcAPI.Models.TableModels
@using Microsoft.AspNetCore.Identity
@inject UserManager<User> UserManager

@{
ViewData["Title"] = "Software";
var isAdmin = UserManager.GetRolesAsync(UserManager.GetUserAsync(User).Result).Result.Contains("Admin");
}

<main class="container mt-4">
    <h1>Software Management</h1>
    <table class="table table-striped">
        <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Current Version</th>
            <th>Category</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var software in Model.Softwares)
        {
        <tr>
            <td>@software.Name</td>
            <td>@software.Description</td>
            <td>@software.CurrentVersion</td>
            <td>@software.Category</td>
        </tr>
        }
        </tbody>
    </table>
</main>
